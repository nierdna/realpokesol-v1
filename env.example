# Environment Configuration
NODE_ENV=development

# Domain & URLs
DOMAIN=pokemon-arena.local
API_URL=http://localhost:3001
SOCKET_URL=ws://localhost:3001

# JWT Configuration
JWT_SECRET=supersecret-change-in-production
JWT_EXPIRES_IN=3600s

# Authentication
NONCE_TTL_SECONDS=300

# Storage Configuration
STORAGE_DRIVER=memory            # memory | postgres
DATABASE_URL=postgresql://user:pass@localhost:5432/pokemon_arena

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://pokemon-arena.local:3000

# Rate Limiting
AUTH_RATE_LIMIT=5                # requests per minute per IP/wallet
SOCKET_RATE_LIMIT_MOVE=20        # moves per second per user
SOCKET_RATE_LIMIT_CHAT=2         # chat messages per second per user
SOCKET_RATE_LIMIT_BATTLE=2       # battle actions per second per user

# Socket.io Configuration
SOCKET_PING_INTERVAL=20000       # ms
SOCKET_PING_TIMEOUT=20000        # ms
MAX_PENDING_EVENTS_PER_USER=50

# Battle Configuration
BATTLE_TIMEOUT_SECONDS=60        # AFK timeout
MATCH_TIMEOUT_SECONDS=60         # matchmaking timeout

# Server Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000
